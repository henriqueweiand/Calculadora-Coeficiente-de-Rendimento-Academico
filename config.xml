<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.weride.calculadora" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Calc. Coeficiente de Rendimento Academico</name>
    <description>
        Calcule de maneira facil o coeficiente de rendimento academico
    </description>
    <author email="contato@weride.com" href="http://weride.com.br">
        WeRide Agencia Digital
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="www/img/android/mipmap-ldpi/ic_launcher.png" density="ldpi" />
        <icon src="www/img/android/mipmap-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="www/img/android/mipmap-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="www/img/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="www/img/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="www/img/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
